{
	"env": {
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 8
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "backtick"],
		"semi": ["error", "always"],
		"brace-style": [2, "stroustrup", { "allowSingleLine": true }],
		"no-trailing-spaces": [2, { "ignoreComments": true }],
		"no-var": 2,
		"prefer-const": 2,
		"no-console": 0,
		"space-before-function-paren": ["error", {
			"anonymous": "never",
			"named": "never",
			"asyncArrow": "always"
		}],
		"yoda": "error"
	}
}
